<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
		<% if (errorMessage) { %>
			<div class="user-message user-message--error"><%= errorMessage %></div>
		<% } %>
        <form enctype="multipart/form-data" class="product-form" action="/admin/<% if (editing) { %>edit-product <%} else {%>add-product <% } %>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<% if (editing) { %> <%= product.title %> <%} else {%>  <% } %>">
            </div>
            <div>
                <label for="image">Image URL</label>
                <input type="file" name="image" id="image">
            </div>
			<!-- <div class="form-control">
                <label for="imgUrl">Image URL</label>
                <input type="text" name="imgUrl" id="imgUrl" value="<% if (editing) { %> <%= product.imgUrl %> <%} else {%>  <% } %>">
            </div> -->
            <div class="form-control">
                <label for="price">Price</label>
                <input type="text" name="price" id="price" step="0.01" value="<% if (editing) { %> <%= +product.price %> <%} else {%>  <% } %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"><% if (editing) { %> <%= product.description %> <%} else {%>  <% } %></textarea>
            </div>
			<% if (editing) { %>
				<input type="hidden" value="<%= product._id %>" name="prodId">
			<% } %>
			<input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <button class="btn" type="submit"><% if (!editing) { %> Add Product <%} else {%>  Edit Product <% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>